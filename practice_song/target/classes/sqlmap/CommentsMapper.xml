<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rinoale.mapper.CommentsMapper">

    <resultMap id="commentsMap" type="com.rinoale.vo.CommentsVo">
        <id     property="seq"    column="seq" />
        <result property="content" column="content" />
        <result property="img_path"       column="img_path" />
    </resultMap>

    <select id="select" resultMap="commentsMap">
        SELECT  * FROM comments
    </select>

    <select id="selectOne" resultMap="commentsMap">
        SELECT  * FROM comments WHERE seq = #{seq}
    </select>

    <insert id="insert">
         INSERT INTO comments ( content, img_path ) VALUES (
                #{content}
              , #{img_path}
         )
    </insert>

    <update id="update">
         UPDATE comments SET
              content = #{content},
              img_path = #{img_path}
         WHERE seq = #{seq} LIMIT 1
    </update>

    <delete id="delete">
         DELETE FROM comments WHERE seq = #{seq}
    </delete>

</mapper>
